@{
    ViewData["Title"] = "Home Page";
}
@model Consultation
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, asplab10
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        input, select {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
            }

        .error {
            color: red;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Заповніть форму</h1>
        <form method="post">
            <label asp-for="Name">Ім'я</label>
            <input type="text" name="name" asp-for="Name" />
            <span asp-validation-for="Name" class="error"></span>

            <label asp-for="Email">Пошта</label>
            <input type="email" name="email" asp-for="Email" />
            <span asp-validation-for="Email" class="error"></span>

            <label asp-for="Subject">Тема</label>
            <select name="subject" asp-for="Subject">
                <option value="JavaScript">JavaScript</option>
                <option value="C#">C#</option>
                <option value="Java">Java</option>
                <option value="Python">Python</option>
                <option value="Basics">Основи</option>
            </select>
            <span asp-validation-for="Subject" class="error"></span>

            <label asp-for="Date">Дата консультації</label>
            <input type="date" name="date" asp-for="Date" />
            <span asp-validation-for="Date" class="error"></span>

            <button type="submit">Продовжити</button>
        </form>
        <vc:error-marker consultation="@Model"></vc:error-marker>
    </div>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
